include ../mixins/mixins
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
        link(rel="stylesheet",href="/styles/main.css")

    body 
        script. 
            var userLoggedIn=!{userLoggedInJs}
        .wrapper 
            .row
                nav.col-2
                    a.blue()
                        i.fa-solid.fa-cat
                    a(href="/")
                        i.fa-solid.fa-house
                        
                    a(href="/search")
                        i.fa-solid.fa-search
                        
                    a(href="/notifications")
                        i.fa-solid.fa-bell
                        

                    a(href="/messages")
                        i.fa-solid.fa-envelope
                        
                    a(href="/profile")
                        i.fa-solid.fa-user
                        
                    a(href="/logout")
                        i.fa-solid.fa-sign-out-alt
                        
                .mainContainer.col-8.col-md-8.col-lg-6
                    .titleContainer    
                        h1 #{title} 
                    block content 
                .d-none.d-md-block.col-2
        script(src='https://kit.fontawesome.com/bac86be1e9.js' crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.7.1.min.js', integrity='sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js' integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js' integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy' crossorigin='anonymous')
        block script
        script(src='/common/common.js')
